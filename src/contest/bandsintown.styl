.cm-bit-header {
	background: #999;
	border-radius: 3px;
	color: #fff;
	font-size: 18px;
	line-height: 1;
	padding: 10px;
	text-align: center;
	text-transform: uppercase;
}
#bit-events table {
	border: 0;

	td,th {
		border: 0;
		border-bottom: 1px solid #444;
		color: #ddd;
		font-size: 95%;
		height: auto;
		padding: 0.55em 0.25em;
		width: auto;
	}
	
	@media (max-width: 600px) {
		tr:nth-child(n+6) {
			display: none;
		}
	}
}
td.bit-rsvp { display: none; }
