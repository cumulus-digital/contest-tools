@import 'nib'

body {
	margin-top: 0 !important;
	background-position: center top !important;
	background-attachment: scroll !important;
	background-repeat: repeat-x !important;
	background-size: cover !important;

	// Remove ugly extra elements
	.ad--top,
	.ad--bottom,
	#admin-preview-message,
	#tabBackHome,
	#navigation { display: none;}

	// Removes any built-in margin/padding on header graphic.
	#header {
		margin: 0 !important;

		a {
			padding: 0 !important;
		}
	}

	/**
	 * Remove individual box-shadow on content blocks, we'll set a single box shadow
	 * on the whole contest container.
	 */
	#container-contentbg,
	#container-footer {
		box-shadow: none !important;
	}
	#container-contentbg {
		@media (max-width: 694px) {
			padding: 0 !important;
		}		
	}
	#container-contest {
		background: transparent;
		box-shadow: 0 0 30px rgba(0,0,0,0.7) !important;
	}
	
	// Clean up the content area
	#container-content {
		line-height: 1.4;
		
		@media (max-width: 694px) {
			padding: 0 !important;
			width: 93% !important;
		}
		
		p {
			margin-bottom: 0.75em;
			padding: 0;
		}
		
		.pagetitle {
			border-bottom: 0 !important;
		}
	}
	
	// Class up the rules popup
	#fancybox-wrap {
		width: 700px !important;
		left: 50% !important;
		margin-left: -350px;
		
		@media (max-width: 700px) {
			width: auto !important;
			left: 0 !important;
			margin-left: 0 !important;
			
			#popup-rules {
				padding: 0 !important;
			}
		}

		#fancybox-content,
		#popup-rules {
			width: auto !important;
		}
		
	}
	
	// Remove ugliness on submit button
	.submit {
		background-image: none;
		border-radius: 0;
		box-shadow: none;
		line-height: 1.3;
		text-shadow: none;
	}
	
}

.twitter-timeline {
	width: 98% !important;
}
.twitter-mobile {
	display: none;
	@media (max-width: 500px) {
		display: block;
		/.twitter-desktop {
			display: none;
		}
	}
}

