@require 'base.styl'

body .wrapper-content {
	&,
	.grid-container,
	.CMLS_CONTEST_CONTENT,
	.CMLS_CONTEST_CONTENT > div,
	.CMLS_CONTEST_CONTENT article,
	.entry-content,
	.themify_builder_row {
		border: 0 !important;
		margin: 0 !important;
		max-width: 100% !important;
		padding: 0 !important;
		width: 100% !important;
	}
	
	.column,
	.row,
	.column > * {
		display: none;
	}
	.CMLS_CONTEST_CONTENT {
		display: block;
	}
}